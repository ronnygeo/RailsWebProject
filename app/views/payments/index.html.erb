<h1>Listing payments</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Event</th>
      <th>Ad</th>
      <th>Listing</th>
      <th>Amount</th>
      <th>Valid from</th>
      <th>Valid to</th>
      <th>Reference code</th>
      <th>Payment received</th>
      <th>Initial start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.client %></td>
        <td><%= payment.event %></td>
        <td><%= payment.ad %></td>
        <td><%= payment.listing %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.valid_from %></td>
        <td><%= payment.valid_to %></td>
        <td><%= payment.reference_code %></td>
        <td><%= payment.payment_received %></td>
        <td><%= payment.initial_start_date %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

