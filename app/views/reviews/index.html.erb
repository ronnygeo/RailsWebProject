<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Client</th>
      <th>Event</th>
      <th>Listing</th>
      <th>Place</th>
      <th>Rating</th>
      <th>Review</th>
      <th>Popularity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user %></td>
        <td><%= review.client %></td>
        <td><%= review.event %></td>
        <td><%= review.listing %></td>
        <td><%= review.place %></td>
        <td><%= review.rating %></td>
        <td><%= review.review %></td>
        <td><%= review.popularity %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_listing_review_path %>
