<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Client</th>
      <th>Subcategorization</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Fee</th>
      <th>Dress code</th>
      <th>Featured</th>
      <th>Keywords</th>
      <th>Reference code</th>
      <th>Link</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.client %></td>
        <td><%= event.subcategorization %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.fee %></td>
        <td><%= event.dress_code %></td>
        <td><%= event.featured %></td>
        <td><%= event.keywords %></td>
        <td><%= event.reference_code %></td>
        <td><%= event.link %></td>
        <td><%= event.duration %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

