<h1>Listing package_lines</h1>

<table>
  <thead>
    <tr>
      <th>Package</th>
      <th>Listing</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @package_lines.each do |package_line| %>
      <tr>
        <td><%= package_line.package %></td>
        <td><%= package_line.listing %></td>
        <td><%= package_line.time %></td>
        <td><%= link_to 'Show', package_line %></td>
        <td><%= link_to 'Edit', edit_package_line_path(package_line) %></td>
        <td><%= link_to 'Destroy', package_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

