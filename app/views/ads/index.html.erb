<h1>Listing ads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Caption</th>
      <th>Category</th>
      <th>Subcategorization</th>
      <th>Link</th>
      <th>Position</th>
      <th>Imagesize</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.name %></td>
        <td><%= ad.caption %></td>
        <td><%= ad.category %></td>
        <td><%= ad.subcategorization %></td>
        <td><%= ad.link %></td>
        <td><%= ad.position %></td>
        <td><%= ad.imagesize %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
